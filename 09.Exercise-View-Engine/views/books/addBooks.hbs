{{#if error}}
    <div class="error">
        Error!
        {{error}}
    </div>
{{/if}}

<form method="POST" action="/addBook">
    Title: <input type="text" name="title" value="{{title}}">
    Author: <input type="text" name="author" value="{{author}}">
    Release Date: <input type="date" name="releaseDate" value="{{releaseDate}}">
    Image URL: <input type="url" name="imageUrl" value="{{imageUrl}}">
    <input type="submit">
</form>